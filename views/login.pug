doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title MatchMe-Login
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='/stylesheets/font-awesome.css', rel='stylesheet')
  body
    .container
      .row.justify-content-center
        .col-lg-8
          .card.my-7
            header.card-header
              h4.card-title.mt-2 Login
            .card-body
              form.form-signin(role='form', action='/login', method='post')
                label.sr-only(for='inputEmail') Email address
                .form-group
                  label Email Address
                  input#inputEmail.form-control(type='text', name='username', placeholder='Username', required='required',   autofocus='autofocus')
                .form-group
                  label Password
                  input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='required')
                .form-group
                  p.text-right
                    a(href="/forgotPassword") Forgot Password?
                  button.btn.btn-primary.btn-block(type='submit')  Login  
            .border-top.card-body.text-center
              a(href='/register') Register
      -if(messages)
         .alert.alert-danger
             div#note #{messages}        
            
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='https://npmcdn.com/js-alert/dist/jsalert.min.js')
