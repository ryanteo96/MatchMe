doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title MatchMe-Register
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='/stylesheets/font-awesome.css', rel='stylesheet')
  body
    .container
      .row.justify-content-center
        .col-lg-8
          .card.my-7
            header.card-header
              h4.card-title.mt-2 Sign Up
            .card-body
              form.form-signin(role='form', action='/register', method='post')
                label.sr-only(for='inputEmail') Email address
                .form-group
                  label Full Name
                  input.form-control(type='text', name='name', placeholder='Name', required='required')
                .form-group
                  label Email Address
                  input.form-control(type='email', name='username', placeholder='Email...', required='required')
                .form-group
                  label Password
                  input.form-control(type='password', name='password', placeholder='Password...', required='required')
                .form-group
                  button.btn.btn-primary.btn-block(type='submit')  Register  
            .border-top.card-body.text-center
              a(href='/login') Log In
      -if(messages)
         .alert.alert-danger
             div#note #{messages}  
              
              
    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='https://npmcdn.com/js-alert/dist/jsalert.min.js')
