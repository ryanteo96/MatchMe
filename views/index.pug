head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title MatchMe - Home
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
body
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.sticky-top
        a.navbar-brand(href='#') MatchMe
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href='/index') Home
                li.nav-item
                    a.nav-link(href='/create') Create
                li.nav-item
                    a.nav-link(href='/profile') Profile
                if(user.admin)
                    li.nav-item
                        a.nav-link(href='/admin') Admin
                li.nav-item
                    a.nav-link(href='/join') Join
                li.nav-item
                    a.nav-link(href='/logout') Logout
    .main
        div
            h5.p-3 All Activities
            ul.list-group.ml-3.mr-3.mb-3
                each activity in activities
                  .card.text-center.mb-3
                    .card-header
                      
                    .card-body
                      div(style='overflow: hidden;')
                        p(style='float: left;') Activity:
                        p(style='float: right;')= activity.activityName
                      div(style='overflow: hidden;')
                        p(style='float: left;') Description:
                        p(style='float: right;')= activity.activityDescription
                      div(style='overflow: hidden;')
                        p(style='float: left;') Location:
                        p(style='float: right;')= activity.location
                      div(style='overflow: hidden;')
                        p(style='float: left;') Time:
                        p(style='float: right;')= moment(activity.datentime).format('hh:mm A')
                      div(style='overflow: hidden;')
                        p(style='float: left;') Date:
                        p(style='float: right;')= moment(activity.datentime).format('MMM D, YYYY')
                      div(style='overflow: hidden;')
                        p(style='float: left;') Max Members:
                        p(style='float: right;')= activity.maxMembers
                                    
                   
                                
                              
